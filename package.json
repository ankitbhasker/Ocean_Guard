{
  "name": "ocean-hazard-platform",
  "version": "1.0.0",
  "description": "Integrated Platform for Crowdsourced Ocean Hazard Reporting and Social Media Analytics",
  "main": "index.js",
  "scripts": {
    "setup": "python setup.py",
    "start:backend": "cd backend && python -m uvicorn server:app --host 0.0.0.0 --port 8001 --reload",
    "start:frontend": "cd frontend && yarn start",
    "start:dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "install:frontend": "cd frontend && yarn install",
    "install:all": "npm run install:backend && npm run install:frontend",
    "test:backend": "cd backend && python -m pytest",
    "test:frontend": "cd frontend && yarn test"
  },
  "keywords": [
    "ocean",
    "hazard",
    "reporting",
    "social-media",
    "analytics",
    "ai",
    "fastapi",
    "react",
    "mongodb"
  ],
  "author": "Ocean Hazard Platform Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/ocean-hazard-platform.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/ocean-hazard-platform/issues"
  },
  "homepage": "https://github.com/your-username/ocean-hazard-platform#readme"
}
